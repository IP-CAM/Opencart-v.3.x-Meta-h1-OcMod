            <add position="replace"><![CDATA[
                if ($manufacturer_info['meta_h1']) {
                    $data['heading_title'] = $manufacturer_info['meta_h1'];
                } else {
                    $data['heading_title'] = $manufacturer_info['name'];
                }
		    ]]></add>
        </operation>
